<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity"
    android:background="@color/blanco">

    <TextView
        android:text="Perfil"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/azul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/AvatarUsuario"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:textColor="@color/blanco"
            android:gravity="center"
            android:text="A"
            android:textSize="80dp"/>

        <TextView
            android:id="@+id/NombreUsuario"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Nombre Usuario"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carreraUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins_light"
            android:text="carrera"
            android:textAlignment="center"
            android:textColor="@color/grisAzulado"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/correoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="ejemplo@gmail.com"
            android:textAlignment="center"
            android:textColor="@color/grisAzulado"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_editar"
            android:text="Editar Cuenta"
            android:textColor="@color/black"
            android:backgroundTint="@color/blanco"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="4dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/blanco"
            android:drawableEnd="@drawable/ic_eliminar_cuenta"
            android:fontFamily="@font/poppins_semibold"
            android:text="Eliminar Cuenta"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cerrarSesion"
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/azul"
            android:drawableEnd="@drawable/ic_cerrar_sesion"
            android:fontFamily="@font/poppins_semibold"
            android:text="Cerrar Sesion"
            android:textSize="16sp"
            app:cornerRadius="8dp" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>