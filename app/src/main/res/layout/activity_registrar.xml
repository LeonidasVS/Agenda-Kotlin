<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".RegistrarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Una Cuenta"
            android:fontFamily="@font/poppins_medium"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:textColor="@color/azul"/>

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:src="@drawable/img_agregar" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputNombre"
                style="@style/EstiloInput"
                android:hint="Nombre"
                android:drawableStart="@drawable/ic_nombre" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputMail"
                style="@style/EstiloInput"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_mail" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputDireccion"
                style="@style/EstiloInput"
                android:hint="Direccion"
                android:drawableStart="@drawable/ic_direccion" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                style="@style/EstiloInput"
                android:hint="Contraseña (mín 6)"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_contrasena"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inpuTelefono"
                android:hint="Telefono"
                android:inputType="number"
                style="@style/EstiloInput"
                android:drawableStart="@drawable/ic_telefono"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHobby"
                style="@style/EstiloInput"
                android:hint="Hobby"
                android:drawableStart="@drawable/ic_hobby"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            app:cornerRadius="8dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:text="Registrarme"
            android:backgroundTint="@color/azul"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>